{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "compileOnSave": false,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
  "extends": "expo/tsconfig.base"
}
